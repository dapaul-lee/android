<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_transformation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dp.test.ui.activity.ImageTransformationActivity">
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Operations : zoom, rotate, move, excharge" />
    <FrameLayout
        android:id="@+id/rl_image_container_left"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text"
        android:background="#ffffff">

        <com.dp.test.ui.view.TouchImageView
            android:id="@+id/iv_image_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/rl_image_container_right"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_image_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!--<com.dp.test.ui.view.TouchImageView
        android:id="@+id/iv_image_3"
        android:layout_width="300dp"
        android:layout_height="300dp" />-->
    <com.xinlan.imageeditlibrary.editimage.view.CropTouchImageView
        android:id="@+id/iv_image_4"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/pic2"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
