<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_crop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dp.test.ui.activity.ImageCropActivity">

    <com.dp.test.ui.view.CropImageView
        android:id="@+id/clip_image_view"
        android:layout_width="200dp"
        android:layout_height="300dp" />

    <ImageView
        android:id="@+id/crop_result"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/clip_image_view"
        android:background="#ffff00" />
</RelativeLayout>
